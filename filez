  <h2>–£–ø—Ä–∞–∂–Ω–µ–Ω–∏–µ 2: –ü–µ—Ä–µ–≤–µ–¥–∏ —Å–ª–æ–≤–æ—Å–æ—á–µ—Ç–∞–Ω–∏–µ</h2>
  <p><strong>‰∏ôÂØÖÂçú</strong> ‚Üí <input id="t1" placeholder="–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–µ–≤–æ–¥"></p>
  <p><strong>ÁéãÂç†Êõ∞</strong> ‚Üí <input id="t2" placeholder="–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–µ–≤–æ–¥"></p>

  <button onclick="check()">–ü—Ä–æ–≤–µ—Ä–∏—Ç—å</button>
  <p id="result"></p>

  <script>
    const answers = {
      t1: ["–≥–∞–¥–∞–ª–∏ –≤ –¥–µ–Ω—å –±–∏–Ω-–∏–Ω—å", "–≤ –¥–µ–Ω—å –±–∏–Ω-–∏–Ω—å –≥–∞–¥–∞–ª–∏", "–≥–∞–¥–∞–ª–∏ –≤ –¥–µ–Ω—å –±«êng y√≠n"],
      t2: ["–ø—Ä–∞–≤–∏—Ç–µ–ª—å –∏—Å—Ç–æ–ª–∫–æ–≤–∞–ª", "–ø—Ä–∞–≤–∏—Ç–µ–ª—å –∏—Å—Ç–æ–ª–∫–æ–≤–∞–ª:", "–ø—Ä–∞–≤–∏—Ç–µ–ª—å —Å–∫–∞–∑–∞–ª"]
    };

    function normalize(str) {
      return str.trim().toLowerCase().replace(/[Ôºö:]/, "").replace(/\s+/g, " ");
    }

    function check() {
      const u1 = normalize(document.getElementById("t1").value);
      const u2 = normalize(document.getElementById("t2").value);

      if (!u1 || !u2) {
        document.getElementById("result").textContent = "–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±–∞ –ø–æ–ª—è.";
        return;
      }

      const match1 = answers.t1.some(ans => normalize(ans) === u1);
      const match2 = answers.t2.some(ans => u1.includes("–∏—Å—Ç–æ–ª–∫–æ–≤–∞–ª") || u2.includes("–∏—Å—Ç–æ–ª–∫–æ–≤–∞–ª"));

      if (match1 && match2) {
        document.getElementById("result").textContent = "‚úÖ –í–µ—Ä–Ω–æ!";
        sendResult(true);
      } else {
        document.getElementById("result").textContent = "‚ùå –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞. –ü–æ–¥—Å–∫–∞–∑–∫–∞: Êõ∞ ‚Äî –≤–≤–æ–¥–∏—Ç –ø—Ä—è–º—É—é —Ä–µ—á—å, Âç† ‚Äî –∏—Å—Ç–æ–ª–∫–æ–≤—ã–≤–∞—Ç—å.";
        sendResult(false, "–ù–µ–≤–µ—Ä–Ω—ã–π –ø–µ—Ä–µ–≤–æ–¥");
      }
    }

    function sendResult(success, message) {
      window.parent.postMessage({ type: "TASK_RESULT", success, message }, "*");
    }
  </script>
</body>
</html><script>// –°–∏–≥–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º —Ä–æ–¥–∏—Ç–µ–ª—é, —á—Ç–æ —ç—Ç–æ ‚Äî –Ω–∞—Å—Ç–æ—è—â–µ–µ –∑–∞–¥–∞–Ω–∏–µ
window.parent.postMessage({
  type: "TASK_EXISTS",
  valid: true
}, "*");
</script>


