    function sendResult(success, message = "") {
      window.parent.postMessage({
        type: "TASK_RESULT",
        success,
        message
      }, "*");
    }

    function check() {
      const r1 = document.getElementById("c1").value;
      const r2 = document.getElementById("c2").value;
      const r3 = document.getElementById("c3").value;
      const r4 = document.getElementById("c4").value;

      if (!r1 || !r2 || !r3 || !r4) {
        document.getElementById("result").textContent = "–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è.";
        return;
      }

      if (r1 === "3" && r2 === "gadat" && r3 === "dojd" && r4 === "pravit") {
        document.getElementById("result").textContent = "‚úÖ –í—Å–µ –≤–µ—Ä–Ω–æ!";
        sendResult(true);
      } else {
        document.getElementById("result").textContent = "‚ùå –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –≤—ã–±–æ—Ä. –ü–æ–¥—Å–∫–∞–∑–∫–∞: ‰∏ô ‚Äî 3-–π –Ω–µ–±–µ—Å–Ω—ã–π —Å—Ç–≤–æ–ª, Âçú ‚Äî –≥–∞–¥–∞—Ç—å, Èõ® ‚Äî –¥–æ–∂–¥—å, Áéã ‚Äî –ø—Ä–∞–≤–∏—Ç–µ–ª—å.";
        sendResult(false, "–û—à–∏–±–∫–∞ –≤ —Å–æ–ø–æ—Å—Ç–∞–≤–ª–µ–Ω–∏–∏");
      }
    }
  </script>
</body>
</html><script>// –°–∏–≥–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º —Ä–æ–¥–∏—Ç–µ–ª—é, —á—Ç–æ —ç—Ç–æ ‚Äî –Ω–∞—Å—Ç–æ—è—â–µ–µ –∑–∞–¥–∞–Ω–∏–µ
